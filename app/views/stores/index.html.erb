<div style="display:none;">
    <% for store in @stores %>
            <h2 style="margin: 0px;">Name: <%= store.name %></h2>
            <h3 style="margin: 0px;">Number: <%= store.phone %></h3>
            <h3 style="margin: 0px;">NABP: <%= store.nabp %> </h3>
            <%= link_to "Edit #{store.name}'s Information", edit_store_path(store) %>
            <hr style="margin-top:15px;">
    <% end %>

<% if logged_in? %>
    <%=link_to "Add New Pharmacy", new_store_path %>
    <div style="float: right;"><%=link_to "Logout", logout_path, class: "btn btn-danger" %></div>
<% end %>
</div>

<div class="center">
    <div class="well top-spacing">
        <div class="jumbotron">
            <h1 class="text-center">
                Pharmacy Index
            </h1>
        </div>
        <table id="example" class="table table-striped table-bordered font-20" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>NABP</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <% for store in @stores %>
                <tr>
                    <td><%= store.name %></td>
                    <td><%= store.phone %></td>
                    <td><%= store.nabp %></td>
                    <td><%= link_to 'Edit', edit_store_path(store) %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%=link_to "Logout", logout_path, class: "btn btn-danger" %>
        <%=link_to "Add New Pharmacy", new_store_path, class: "btn btn-info pull-right" %>
    </div>
</div>