<div class="container">
  <div class="title">
    <h2>Store Directory</h2>
  </div>
  <section class="stores-table">
    <table class="table table-hover">
      <% @stores.each do |store| %>
        <tr>
          <td>
            <%= link_to store.name, store_path(store) %>
          </td>
        </tr>
      <% end %>
    </table>
  </section>
</div>