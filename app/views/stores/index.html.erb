
<div class="center">
    <div class="well top-spacing">
        <div class="jumbotron">
            <h1 class="text-center">
                Pharmacy Index
            </h1>
        </div>
        <div class="pull-right search-form">
            <p class="form-text text-muted text-right">Date filter accepts <strong>MMDDYYYY</strong> format</p>
            <form class="form-inline">
                <%= form_tag stores_path, method: :get do %>
                <div class="form-group">
                    <%= text_field_tag 'search[date_from]', @search.date_from, class: "form-control" %>
                    <small id="emailHelp" class="form-text text-muted">to</small>
                </div>
                <div class="form-group">
                    <%= text_field_tag 'search[date_to]', @search.date_to, class: "form-control" %>
                </div>
                    <%= submit_tag 'Search', class: 'btn btn-success' %>
                <% end %>
            </form>
        </div>
        <table class="table table-striped table-bordered font-20" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>NABP</th>
                    <th>Unread Messages</th>
                    <th>Sent Messages</th>
                </tr>
            </thead>
            <tbody>
                <% for store in @stores %>
                <tr>
                    <td><%= link_to store.name, edit_store_path(store) %></td>
                    <td><%= store.phone %></td>
                    <td><%= store.nabp %></td>
                    <!--<td> store.messages.count</td>-->
                    <% sent, unread = 0, 0 %>
                    <% for message in @messages %>
                        <% if message.from == store.phone %>
                            <% sent +=1 %>
                        <% else unread +=1 %>
                        <% end %>
                    <% end %>
                    <td><%= unread %></td>
                    <td><%= sent %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%=link_to "Logout", logout_path, class: "btn btn-danger" %>
        <%=link_to "Add New Pharmacy", new_store_path, class: "btn btn-info pull-right" %>
    </div>
</div>
