<div class="container">
  
  <div class="title">
    <h2>Users Directory</h2>
  </div>
  <section class="stores-table">
    <table class="table table-hover">
      <% @users.each do |user| %>
        <tr>
          <td>
            Username: <%= link_to user.username, edit_user_path(user) %>
            Company Name: <%= user.company_name %>
          </td>
        </tr>
      <% end %>
    </table>
  </section>
  <%= link_to '<i class="glyphicon glyphicon-plus"></i> Add New User'.html_safe, new_user_path, class: "btn btn-success" %>
  
  <div class="title">
    <h2>Store Directory</h2>
  </div>
  <section class="stores-table">
    <table class="table table-hover">
      <% @stores.each do |store| %>
        <tr>
          <td>
            <%= link_to store.name, edit_store_path(store) %>
          </td>
        </tr>
      <% end %>
    </table>
  </section>
  <%= link_to '<i class="glyphicon glyphicon-plus"></i> Add New Store'.html_safe, new_store_path, class: "btn btn-success" %>
</div>