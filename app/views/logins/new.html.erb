<div class="container">
    <div class="text-center">
        <%= image_tag("QS_logo_sm.png", size: "350x122") %>
        <h2>Report Portal</h2>
        <p>Login</p>
    </div>
    <div class="login-form">
        <%= form_tag '/login' do %>
            <div class="form-group">
                <%= label_tag :username, nil, class: "font-20" %>
                <%= text_field_tag :username, nil, class: "form-control input-lg" %>
            </div>
            <div class="form-group">
                <%= label_tag :password, nil, class: "font-20" %>
                <%= password_field_tag :password, nil, class: "form-control input-lg" %>
            </div>
            <div class="form-group">
                <%= button_tag '<i class="glyphicon glyphicon-log-in"></i> Log in'.html_safe, type: 'submit', class: "btn btn-lg btn-success pull-right" %>
                <br>
            </div>
        <% end %>
    </div>
</div>