<div style="width: 35%; margin: 0 auto;">
    <h1>QuickSCRIP Texting Admin Login</h1>
    
    <%= form_tag '/login' do %>
        <%= label_tag :username, nil, class: "font-20" %>
        <%= text_field_tag :username, nil, class: "font-20" %>
        </br>
        </br>
        <%= label_tag :password, nil, class: "font-20" %>
        <%= password_field_tag :password, nil, class: "font-20" %>
        </br>
        </br>
        <%= submit_tag 'Log in', class: 'font-20 btn btn-success' %>
    <% end %>
</div>